#Check for and Install Key Packages
packages <- c(
  "tidyverse",
  "haven",
  "labelled",
  "survey",
  "summarytools"
)


for (pkg in packages) {
  if (!require(pkg, character.only = TRUE)) {
    install.packages(pkg)
    library(pkg, character.only = TRUE)
  }
}

